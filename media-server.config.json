{
  "bind": "0.0.0.0",
  "logType": 3,
  "auth": {
    "play": false,
    "publish": false,
    "secret": "nodemedia2017privatekey"
  },
  "rtmp": {
    "port": 1935
  },
  "rtmps": {
    "port": 1936,
    "key": "./key.pem",
    "cert": "./cert.pem"
  },
  "http": {
    "port": 8000,
    "allow_origin": "*",
    "mediaroot": "/node-media-server/media"
  },
  "https": {
    "port": 8443,
    "key": "./key.pem",
    "cert": "./cert.pem"
  },
  "notify": {
    "url": "http://app:3000/api/streams/webhooks"
  },
  "trans": {
    "ffmpeg": "/usr/bin/ffmpeg",
    "tasks": [
      {
        "app": "live",
        "hls": true,
        "hlsKeep": true,
        "hlsFlags": "[hls_time=2:hls_list_size=150:hls_path=/node-media-server/media/live:hls_segment_filename=/node-media-server/media/live/%v/segment-%03d.ts]",
        "dash": false
      }
    ]
  }
}
