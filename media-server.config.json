{
  "bind": "0.0.0.0",
  "notify": {
    "url": ""
  },
  "auth": {
    "play": false,
    "publish": false,
    "secret": "nodemedia2017privatekey"
  },
  "rtmp": {
    "port": 1935
  },
  "rtmps": {
    "port": 1936,
    "key": "./key.pem",
    "cert": "./cert.pem"
  },
  "http": {
    "port": 8000,
    "allow_origin": "*"
  },
  "https": {
    "port": 8443,
    "key": "./key.pem",
    "cert": "./cert.pem"
  },
  "notify": {
    "url": "http://app:3000/api/streams/webhooks"
  },
  "trans": {
    "ffmpeg": "/usr/bin/ffmpeg",
    "tasks": [
      {
        "app": "live",
        "hls": true,
        // Keep a longer rolling window (~5 minutes with 2s segments)
        // Remove delete_segments to allow seeking within that window
        "hlsFlags": "[hls_time=2:hls_list_size=150]",
        "dash": false
      }
    ]
  }
}
